    { "name": "optFloat", "type": ["null", "float"],  "default": null },
    { "name": "optDouble","type": ["null", "double"], "default": null },
    { "name": "optBool",  "type": ["null", "boolean"],"default": null },
    { "name": "optBytes", "type": ["null", "bytes"],  "default": null },

    { "name": "optStrList", "type": ["null", {"type": "array", "items": "string"}], "default": null },
    { "name": "optIntMap",  "type": ["null", {"type": "map",   "values": "int"}],   "default": null },

    { "name": "optRec", "type": ["null", {"type": "record", "name": "OptInner", "fields": [
      {"name": "id", "type": "int"}
    ]}], "default": null },

    { "name": "optEnum", "type": ["null", {"type": "enum", "name": "OptColor", "symbols": ["RED","GREEN","BLUE"]}], "default": null }
  ]
